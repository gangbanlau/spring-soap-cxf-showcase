<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
    xmlns:jaxws="http://cxf.apache.org/jaxws"   
    xmlns:jaxrs="http://cxf.apache.org/jaxrs"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:context="http://www.springframework.org/schema/context"  
    xsi:schemaLocation="  
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd  
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd   
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
        http://cxf.apache.org/jaxrs
        http://cxf.apache.org/schemas/jaxrs.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        ">  
          
    <import resource="classpath:META-INF/cxf/cxf.xml"/>  
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>  
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>  
    
    
    <bean id="helloService" class="com.dp.demo.web.HelloWorldImpl" />  
    <jaxws:endpoint id="helloWService" implementorClass="com.dp.demo.web.HelloWorld" address="/helloworld">  
        <jaxws:implementor>  
            <ref bean="helloService"/>  
        </jaxws:implementor>  
    </jaxws:endpoint>  
    
    <jaxws:endpoint
       id="bookShelfService"
       implementor="com.dp.demo.web.BookShelfServiceImpl"
       address="/bookshelfservice" />
       
       <jaxws:endpoint
       id="userService"
       implementor="com.dp.demo.web.UserServiceImpl"
       address="/userservice" />

</beans>  
